---
layout: null
permalink: /all.json
---
{
  "count": {{ site.communities | size }},
  "generated": "{{ site.time | date_to_xmlschema }}",
  "communities": [
    {%- for community in site.communities -%}
    {
      "name": {{ community.name | jsonify }},
      "link": {{ community.link | default: community.url | jsonify }},
      "description": {{ community.description | jsonify }},
      "tags": {{ community.tags | jsonify }},
      "source": {{ community.source | jsonify }}{% if community.address or community.address.streetAddress or community.address.postalCode %},
      "address": {
        {%- assign addr = community.address -%}
        "streetAddress": {{ addr.streetAddress | default: "" | jsonify }},
        "postalCode": {{ addr.postalCode | default: "" | jsonify }}
      }{% endif %}{% if community.social and community.social.size > 0 %},
      "social": {
        {%- for network in community.social -%}
          "{{ network[0] }}": {{ network[1] | jsonify }}{% unless forloop.last %},{% endunless %}
        {%- endfor -%}
      }{% endif %}
    }{%- unless forloop.last -%},{%- endunless -%}
    {%- endfor -%}
  ]
}
